PORT=3001
# Google Gemini API Key (used for both story generation and Imagen image generation)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
NODE_ENV=development
DATABASE_PATH=./neon_threads.db
APP_URL=http://localhost:3000

# Database Configuration (for PostgreSQL on Render)
# DATABASE_URL will be automatically set by Render if using a PostgreSQL database
# JWT_SECRET should be a random secure string for token signing
DATABASE_URL=postgresql://user:password@host:port/database
JWT_SECRET=your_jwt_secret_here

